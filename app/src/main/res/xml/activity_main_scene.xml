<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="easeOut">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorSide="bottom"
            motion:targetId="@id/view" />

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/button4"
                motion:percentX="0"
                motion:percentY="1.0" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/button5"
                motion:percentX="0"
                motion:percentY="1.0" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/button6"
                motion:percentX="0"
                motion:percentY="1.0" />


            <KeyPosition
                app:layout_constraintEnd_toStartOf="@id/button8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                motion:framePosition="50"
                motion:motionTarget="@id/button7"

                motion:keyPositionType="deltaRelative"
                motion:percentX="1"
                motion:percentY="0.5"/>
            <KeyAttribute
                android:alpha="0"
                android:scaleX="2"
                android:scaleY="2"
                android:visibility="visible"
                motion:framePosition="50"
                motion:motionTarget="@id/button7"/>

            <KeyPosition
                app:layout_constraintEnd_toStartOf="@id/button9"
                app:layout_constraintStart_toEndOf="@id/button7"
                app:layout_constraintTop_toTopOf="parent"
                motion:framePosition="50"
                motion:motionTarget="@id/button8"

                motion:keyPositionType="deltaRelative"
                motion:percentX="1"
                motion:percentY="0.5"/>
            <KeyAttribute
                android:alpha="0"
                android:scaleX="2"
                android:scaleY="2"
                android:visibility="visible"
                motion:framePosition="50"
                motion:motionTarget="@id/button8"/>

            <KeyPosition
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button8"
                app:layout_constraintTop_toTopOf="parent"
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/button9"
                motion:percentX="1"
                motion:percentY="0.5" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="2"
                android:scaleY="2"
                android:visibility="visible"
                motion:framePosition="50"
                motion:motionTarget="@id/button9">
                <!--TODO does not wokr, ask-->
                <CustomAttribute
                    app:attributeName="layout_height"
                    motion:customDimension="200dp" />
            </KeyAttribute>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/button1" />
        <Constraint android:id="@id/button2" />
        <Constraint android:id="@id/button3" />
        <Constraint android:id="@id/button4" />
        <Constraint android:id="@id/button5" />
        <Constraint android:id="@id/button6" />
        <Constraint android:id="@id/button7" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/button1"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/button2"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/button3"
            app:layout_constraintStart_toEndOf="@id/button1"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/button3"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/button4"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@id/button5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button1" />
        <Constraint
            android:id="@id/button5"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@id/button6"
            app:layout_constraintStart_toEndOf="@id/button4"
            app:layout_constraintTop_toBottomOf="@id/button2" />
        <Constraint
            android:id="@id/button6"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@id/button3" />

        <Constraint
            android:id="@id/button7"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:alpha="1"

            android:scaleX="1"
            android:scaleY="1"

            app:layout_constraintEnd_toStartOf="@id/button8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button4" />

        <Constraint
            android:id="@id/button8"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:alpha="1"

            android:scaleX="1"
            android:scaleY="1"

            app:layout_constraintEnd_toStartOf="@id/button9"
            app:layout_constraintStart_toEndOf="@id/button7"
            app:layout_constraintTop_toBottomOf="@id/button5" />

        <Constraint
            android:id="@id/button9"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:alpha="1"

            android:scaleX="1"
            android:scaleY="1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button8"
            app:layout_constraintTop_toBottomOf="@id/button6" />
    </ConstraintSet>

</MotionScene>
